<div class="container">
  <div class="row justify-content-center">
   <h2 class="my-5">ジャンル一覧・追加</h2>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="form-group col-md-6">
        <%= form_with model:@genre ,url: admin_genres_path do |f| %>
        <div class="row">
        <%= f.label "ジャンル名", class:"col-4 col-form-label" %>
        <%= f.text_field :name, class:"col-4 form-control" %>
        <%= f.submit "新規登録", class:"btn btn-success col-2 col-offset-2 ml-4" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-6">
      <table class="table">
        <thead>
          <tr>
            <div class="row">
                <th class="col-6 bg-light text-center">ジャンル</th>
                <th class="col-6 bg-light text-center"></th>
              </div>
            </div>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="text-center"><%= genre.name %></td>
            <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>