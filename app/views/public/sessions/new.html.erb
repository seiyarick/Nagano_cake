<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2>ログイン</h2>
    </div>
  </div>
</div>
<div claas="container">
  <div class="row justify-content-center">
   <div class="col-6">
    <h4 class="mt-5">会員の方はこちらからログイン</h4>
    <form>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row my-5">
        <%= f.label "メールアドレス", class:"col-4 col-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-8 form-control" %>
      </div>

      <div class="row my-3">
        <%= f.label "パスワード", class:"col-4 col-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"col-8 form-control" %>
      </div>

      <div class="container">
        <div class="row">
          <div class="mx-auto">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    </form>

    <div>
      <h5>会員登録がお済みでない方</h5>
      <p>
        <%= link_to "こちら", new_customer_registration_path %>
        から新規登録を行なってください。
      </p>
    </div>
   </div>
  </div>
</div>
<%#= render "public/shared/links" %>
