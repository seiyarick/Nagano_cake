<h1>注文履歴一覧</h1>
<div class="container">
  <div class="row">
    <table class="table col-10">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>

      </tr>
      <tbody>
        <% @orders.each do |order| %>
        <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
        <td><%= order.name %></td>
        <td><%= order.total_amount %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%#= paginate @orders %>