<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h1 class="my-4">注文履歴一覧</h1>
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th class="text-center">注文日</th>
            <th class="text-center">配送先</th>
            <th class="text-center">注文商品</th>
            <th class="text-center">支払金額</th>
            <th class="text-center">注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td class="align-middle text-center"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td class="align-middle">
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %><br>
            </td>
            <td class="align-middle text-center">
              <% order.ordering_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td class="align-middle text-center"><%= order.total_payment.to_s(:delimited, delimiter: ',') %>円</td>
            <td class="align-middle text-center"><%= link_to "表示する", public_order_path(order.id), class:"btn btn-primary" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
