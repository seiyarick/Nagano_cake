

<h1>Admin::商品編集</h1>

<div class="form_group">
  <%= form_with model: @item ,url: admin_item_path do |f| %>
  <label class="item_image">商品画像</label>
  <%= f.file_field :image, accept: "image/*" %><br>

  <label class="item_name">商品名</label>
  <%= f.text_field :name %><br>

  <label class="item_introduction">商品説明文</label>
  <%= f.text_area :introduction %><br>

  <label class="genre">ジャンル</label>
  <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %><br>

  <label class="item_price">税抜価格</label>
  <%= f.text_field :price %>円<br>

  <label class="form-check">販売ステータス</label>
  <%= f.radio_button :is_active, true, checked: true %>販売中
  <%= f.radio_button :is_active, false %>販売停止中<br>

  <div class="btn">
  <%= f.submit "変更を保存", class:"btn btn-success" %>
  </div>

  <% end %>
</div>
