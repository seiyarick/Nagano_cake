<div class="container">
  <div class="row">
    <div class="col-8">
    <h1 class="my-5 mx-auto">配送先登録/一覧</h1>
      <%= form_with model:@address, url: public_addresses_path do |f| %>
      <div class="row my-2">
        <%= f.label "郵便番号", class:"col-form-label col-4" %>
        <div class="col-8">
        <%= f.text_field :postal_code, class:"form-control" %>
        </div>
      </div>
      <div class="row my-2">
        <%= f.label "住所", class:"col-form-label col-4" %>
        <div class="col-8">
        <%= f.text_field :address, class:"form-control" %>
        </div>
      </div>
      <div class="row my-2">
        <%= f.label "宛名", class:"col-form-label col-4" %>
        <div class="col-8">
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto">
        <%= f.submit "新規登録", class:"btn btn-success px-auto" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-8">
      <table class="table mt-5 col-auto">
        <thead>
          <tr>
            <div class="row">
              <div class="col-2">
                <th scope="col">郵便番号</th>
              </div>
              <div class="col-3">
                <th scope="col">住所</th>
              </div>
              <div class="col-3">
                <th scope="col">宛名</th>
              </div>
              <div class="col-3">
                <th></th>
              </div>
            </div>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <tr>
            <div class="row">
              <div class="col-2">
                <td><%= address.postal_code %></td>
              </div>
              <div class="col-3">
                <td><%= address.address %></td>
              </div>
              <div class="col-3">
                <td><%= address.name %></td>
              </div>
              <div class="col-3">
                <td>
                  <%= link_to "編集する", edit_public_address_path(address.id), class:"btn btn-success mr-5" %>
                  <%= link_to "削除する", public_address_path(address.id), method: :delete, class:"btn btn-danger" %>
                </td>
              </div>
            </div>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>