<h1>Public::会員情報編集</h1>

<%= form_with model:@customer,url: public_customer_path do |f| %>

<div class="form">
  <div class="field">
    <label>名前</label>
    <form>(姓)<%= f.text_field :first_name %>(名)<%= f.text_field :last_name %></form>
  </div>
  <div class="field">
    <label>フリガナ</label>
     <form>(セイ)<%= f.text_field :first_name_kana %>(メイ)<%= f.text_field :last_name_kana %></form>
  </div>
  <div class="field">
    <label>郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <label>電話番号(ハイフンなし)</label>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<% end %>
<%= link_to "編集内容を保存", public_customer_path(@customer.id), class: "btn btn-success" %>
<%= link_to "退会する",  public_customers_confirm_path(@customer.id), class: "btn btn-danger" %>
