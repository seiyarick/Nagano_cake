<h1>Admin::会員情報編集</h1>

<div class="form_group">
  <%= form_with model: @customer ,url: admin_customer_path do |f| %>
  
  <label class="customer_id">会員ID</label>
  <%= @customer.id %><br>
  
  <label class="customer_name">氏名</label>
  <%= f.text_field :first_name %><%= f.text_field :last_name %><br>
  
  <label class="customer_name_kana">フリガナ</label>
  <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %><br>
  
  <label class="customer_postal_code">郵便番号</label>
  <%= f.text_field :postal_code %><br>
  
  <label class="customer_address">住所</label>
  <%= text_field :address %><br>
  
  <label class="customer_telephone_number">電話番号</label>
  <%= f.text_field :telephone_number %><br>
  
  <label class="customer_email">メールアドレス</label>
  <%= f.text_field :email %><br>
  
  <label class="customer_status">会員ステータス</label>
  <%= f.radio_button :is_active, true, checked: true %>有効
  <%= f.radio_button :is_active, false %>退会<br>

  <div class="btn">
  <%= f.submit "変更を保存", class:"btn btn-success" %>
  </div>

  <% end %>