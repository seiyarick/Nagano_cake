<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table">
        <h2 class="my-5">会員一覧</h2>
          <tr class="bg-light">
            <th class="text-center">会員ID</th>
            <th class="text-center">氏名</th>
            <th class="text-center">メールアドレス</th>
            <th class="text-center">ステータス</th>
          </tr>
        　<% @customers.each do |customer| %>
          <tbody>
            <tr>
              <td class="text-center"><%= customer.id %></td>
              <td class="text-center">
                <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.first_name %>
                <%= customer.last_name %>
                <% end %>
              </td class="text-center">
              <td class="text-center"><%= customer.email %></td>
              <td class="text-center">
                <% if customer.is_deleted == false %>
                  <text class="text-success">有効</text>
                <% else %>
                  <text class="text-danger">退会</text>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <div class="mx-auto">
      <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>
