<h1>Admin::会員詳細</h1>
<table class="customer">
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if @customer.is_deleted == true %>
        有効
        <% else %>
        退会
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to "編集する", edit_customer_registration_path(@customer.id), class:"btn btn-success" %>
<%= link_to "注文履歴一覧を見る", admin_homes_top_path, class:"btn btn-primary" %>