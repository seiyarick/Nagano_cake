<div class="container">
 <div class="row">
  <div class="col-8">
  <h1 class="my-4">注文情報入力</h1>
  </div>
 </div>
</div>
<div class="container">
 <div class="row justify-content-center">
  <div class="col-10">
    <div class="row mb-3">
     <div class="col-auto">
      <h3>支払方法</h3>
       <%= form_with model: @order, url:  public_orders_confirm_path, method: :post do |f| %>

       <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
       <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

       <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
       <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
     </div>
    </div>
    <div class="row mb-3">
     <div class="col-auto">
      <h3>お届け先</h3>
      <%= f.radio_button :select_number, 0 %>
      <%= f.label :ご自身の住所,class:"col-form-label"  %><br>
      <div class="ml-5">
      〒<%= current_customer.postal_code %>
      <%= current_customer.address %><br>
      <%= current_customer.first_name %>
      <%= current_customer.last_name %><br>
      </div>
     </div>
    </div>
    <div class="row mb-3">
     <div class="col-auto">
      <%= f.radio_button :select_number, 1 %>
      <%= f.label :登録済み住所から選択 %>
      <%= f.select:address_id,options_from_collection_for_select(Address.all, :id, :address_display), class:"form-control" %>
      <br>
     </div>
    </div>
    <div class="row mb-3">
     <div class="col-auto">
      <%= f.radio_button :select_number, 2 %>
      <%= f.label :新しいお届け先 %><br>
     </div>
    </div>
    <div class="ml-5">
      <div class="row">
       <%= f.label "郵便番号（ハイフンなし）", class:"col-3 col-form-label" %>
       <div class="col-6">
       <%= f.text_field :postal_code, class:"form-control" %><br>
       </div>
      </div>
      <div class="row">
       <%= f.label "住所", class:"col-3 col-form-label" %>
       <div class="col-7">
       <%= f.text_field :address, class:"form-control" %><br>
       </div>
      </div>
      <div class="row">
       <%= f.label "宛名", class:"col-3 col-form-label" %>
       <div class="col-6">
       <%= f.text_field :name, class:"form-control" %><br>
       </div>
      </div>
     </div>
      <div class="row justify-content-center">
       <div claws="col-12">
        <div class="text-center mb-4">
        <%= f.submit "確認画面へ進む",  class:"btn btn-primary" %>
        </div>
        <% end %>
       </div>
      </div>
     </div>
    </div>
   </div>
  </div>
 </div>
</div>













