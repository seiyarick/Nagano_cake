<div class="container">
  <div class="row justify-content-center">
   <div class="col-10 text-center">
    <h1 class="my-5 mr-5">注文履歴一覧</h1>
   </div>
  </div>
</div>
<div class="container">
  <div class="row  justify-content-center">
    <div class="col-8 col-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
           <tr>
            <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
            <td><%= order.name %></td>
            <td><%= order.total_amount %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%#= paginate @orders %>