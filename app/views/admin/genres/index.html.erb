<h1>Admin:ジャンル一覧・追加</h1>

<div class="form-group">
    <%= form_with model:@genre ,url: admin_genres_path do |f| %>
    <label class="genre_name">ジャンル名</label>
    <%= f.text_field :name %>
    <div class="form-group">
    <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
    <% end %>
</div>
<table class="table">
  <tr>
    <th>ジャンル</th>
    <th></th>
    <th></th>
  </tr>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
