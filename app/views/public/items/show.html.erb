<div class="container">
  <div class="row">
    <div class="col-10">
      <h1 class="my-5">商品詳細</h1>
      <div class="row">
        <div class="col-4">
        <%= image_tag @item.image, size: "200x200" %>
        </div>
        <div class="col-8">
        <h2><%= @item.name %></h2><br>

        <h3><%= @item.introduction %></h3><br>

        <h3>¥<%= @item.price.to_s(:delimited, delimiter: ',') %></h3><h6>(税込)</h6>

        <%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
        <%= f.select:amount,[['1個',1],['2個',2],['3個',3],['4個',4],['5個',5],['6個',6],['7個',7],['8個',8],['9個',9],['10個',10]] %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる", class:"btn btn-success ml-4" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

