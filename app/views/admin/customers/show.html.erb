
<div class="row">
<h1 class="mx-auto my-3"><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h1>
</div>
<div class="container">
  <div class="row">
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == true %>
            有効
            <% else %>
            退会
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-8 col-offset-2 mx-auto">
      <%= link_to "編集する", edit_customer_registration_path(@customer.id), class:"btn btn-success ml-4" %>
      <%= link_to "注文履歴一覧を見る", admin_homes_top_path, class:"btn btn-primary ml-4" %>
      </div>
    </div>
  </div>
</div>