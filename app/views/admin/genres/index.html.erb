<div class="container">
  <div class="row">
   <h3>ジャンル一覧・追加</h3>
    <div class="form-group col-md-10">
        <%= form_with model:@genre ,url: admin_genres_path do |f| %>
        <%= f.label "ジャンル名", class:"mr-5" %>
        <%= f.text_field :name, class:"mr-5" %>
        <%= f.submit "新規登録", class:"btn btn-success " %>
        <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <table class="table">
      <tr>
        <th class="bg-light">ジャンル</th>
        <th class="bg-light"></th>
        <th class="bg-light"></th>
      </tr>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>