

<div class="container">
  <div class="row">
    <div class="col-8">
    <h2 class="my-5">商品編集</h2>
        <%= form_with model: @item ,url: admin_item_path do |f| %>
          <div class="row mb-4">
            <div class="col-2">
            <%= f.label "商品画像", class:"col-form-label" %>
            </div>
            <div class="col-10">
            <%= f.file_field :image, accept: "image/*" %>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-2">
            <%= f.label "商品名", class:"col-form-label" %>
            </div>
            <div class="col-10">
            <%= f.text_field :name, class:"form-control" %>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-2">
            <%= f.label "商品説明文", class:"col-form-label"%>
            </div>
            <div class="col-10">
            <%= f.text_area :introduction, class:"form-control" %>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-2">
            <%= f.label "ジャンル",class:"col-form-label" %>
            </div>
            <div class="col-10">
            <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--", class:"form-control" %>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-2">
            <%= f.label "税抜価格", class:"col-form-label" %>
            </div>
            <div class="col-10">
            <%= f.text_field :price, class:"form-control" %>円
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-2">
            <%= f.label "販売ステータス", class:"col-form-label" %>
            </div>
            <div class="col-10">
            <%= f.radio_button :is_active, true, checked: true %>販売中
            <%= f.radio_button :is_active, false %>販売停止中
            </div>
          </div>
          <div class="col-12 text-center">
            <%= f.submit "変更を保存", class:"btn btn-success" %>
          </div>
        <% end %>
    </div>
  </div>
</div>