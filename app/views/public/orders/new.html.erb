<h1>Public::注文情報入力</h1>

<%= form_with model: @order, url:  public_orders_confirm_path do |f| %>
<h4>支払方法</h4>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<h4>お届け先</h4>
<%= f.radio_button :select_number, "1" %>
<%= f.label :ご自身の住所  %>
〒<%= current_customer.postal_code %>
<%= current_customer.address %>
<%= current_customer.first_name %>
<%= current_customer.last_name %>
<br>
<%= f.radio_button :select_number, "2" %>
<%= f.label :登録済み住所から選択 %>
<%= f.select:address_id,options_from_collection_for_select(Address.all, :id, :address_display) %>
<br>
<%= f.radio_button :select_number, "3" %>
<%= f.label :新しいお届け先 %>
<table>
 <tr>
   <th>郵便番号（ハイフンなし）</th>
   <td><%= f.text_area :postal_code %></td>
 </tr>
 <tr>
   <th>住所</th>
   <td><%= f.text_area :address %></td>
 </tr>
 <tr>
   <th>宛名</th>
   <td><%= f.text_area :name %></td>
 </tr>
</table>
<%= f.submit "確認画面へ進む",  class:"btn btn-primary" %>
<% end %>


