<h1>注文履歴一覧</h1>
<div class="container">
  <div class="row">
    <table class="table col-10">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
      <tbody>
        <% @orders.each do |order| %>
        <td><%= order.created_at %></td>
        <td><%= order.name %></td>
        <td>
          <%= @amount = 0 %>
          <% order.ordering_details.each do |ordering_detail| %>
             <% @amount += ordering_detail.amount %>
          <% end %>
        </td>
        <td></td>
        <td></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @orders %>