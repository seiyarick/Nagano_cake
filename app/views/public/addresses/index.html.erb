<h1>Public::配送先登録/一覧</h1>
<%= form_with model:@addresses, url: public_addresses_path do |f| %>
<label>郵便番号</label>
<%= f.text_field :postal_code %>
<label>住所</label>
<%= f.text_field :address %>
<label>宛名</label>
<%= f.text_field :name %>
<% end %>
<%= link_to "新規登録", public_addresses_path, class:"btn btn-success" %>

<table class="table">
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <tbody>
    <tr>
      <% @addresses.each do |addresse| %>
      <td><%= addresse.postal_code %></td>
      <td><%= addresse.addresse %></td>
      <td><%= addresse.name %></td>
      <td>
        <%= link_to "編集する", edit_public_address_path(addresse.id), class:"btn btn-success" %>
        <%= link_to "削除する", public_address_path(addresse.id), method: :delete, class:"btn btn-success" %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>