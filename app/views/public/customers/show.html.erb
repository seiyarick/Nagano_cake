<div class="container">
 <div class="row">
   <div class="col-10">
     <h1 class="mt-3">マイページ</h1>
    <div class="col-5 my-5">
    <label class="font-weight-bold">登録情報</label>
    <%= link_to "編集する", edit_public_customer_path(@customer.id), class:"btn btn-success ml-4" %>
    </div>

    <table class="table">
      <tbody>
        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
    <div>
  </div>
 </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>配送先</th>
            <td><%= link_to "一覧を見る", public_addresses_path(@customer.id), class:"btn btn-primary" %></td>
          </tr><br>
          <tr>
            <th>注文履歴</th>
            <td><%= link_to "一覧を見る", public_orders_path(@customer.id), class:"btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
